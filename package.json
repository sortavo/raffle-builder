{
  "name": "sortavo",
  "private": true,
  "version": "1.0.0",
  "packageManager": "npm@10.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@sortavo/web",
    "dev:mobile": "turbo run dev --filter=@sortavo/mobile",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@sortavo/web",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:run": "turbo run test:run",
    "clean": "turbo run clean && rm -rf node_modules",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.8.3"
  }
}
